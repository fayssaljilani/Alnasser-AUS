---

<footer class="bg-primary-900 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="md:col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <div class="bg-white text-primary-600 px-3 py-2 rounded-lg">
            <span class="text-xl font-black">BIG</span>
          </div>
          <div class="bg-secondary-200 text-secondary-800 px-3 py-2 rounded-lg">
            <span class="text-xl font-black">N</span>
          </div>
        </div>
        <p class="text-primary-200 text-sm">
          Quality clothing and footwear for Australian families. Your local fashion destination since 1995.
        </p>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-primary-200 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Categories -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Shop by Category</h3>
        <ul class="space-y-2">
          {footerLinks.categories.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-primary-200 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Contact Info</h3>
        <ul class="space-y-2">
          {footerLinks.contact.map((item) => (
            <li class="flex items-start space-x-2 text-sm text-primary-200">
              <span class="mt-0.5">{item.icon}</span>
              <span>{item.text}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t border-primary-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-primary-200">
          ¬© {currentYear} BIG N. All rights reserved. | Australian Owned & Operated
        </p>
        <div class="flex space-x-6">
