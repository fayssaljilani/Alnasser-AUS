---
import { getCollection } from 'astro:content';
import StoreCard from './StoreCard.astro';

const stores = await getCollection('stores');
const sortedStores = stores.sort((a, b) => a.data.name.localeCompare(b.data.name));
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Visit Our Stores
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Experience the BIG N difference at any of our Melbourne locations. 
        Each store offers expert fitting service, quality fashion, and the personal touch you deserve.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {sortedStores.map((store) => (
        <StoreCard
          name={store.data.name}
          address={store.data.address}
          suburb={store.data.suburb}
          shopNumber={store.data.shopNumber}
          phone={store.data.phone}
          hours={store.data.hours}
          services={store.data.services}
          image={store.data.image}
          href={`/stores/${store.slug}`}
        />
      ))}
    </div>

    <!-- Store Features -->
    <div class="bg-white rounded-2xl p-8 md:p-12 shadow-lg">
      <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">
        What You'll Find at Every BIG N Store
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="flex items-start space-x-3">
          <div class="text-2xl">👔</div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-1">Quality Fashion</h4>
            <p class="text-sm text-gray-600">Carefully selected clothing for the whole family</p>
          </div>
        </div>
        
        <div class="flex items-start space-x-3">
          <div class="text-2xl">👟</div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-1">Footwear Specialists</h4>
            <p class="text-sm text-gray-600">Expert fitting service for perfect comfort</p>
          </div>
        </div>
        
        <div class="flex items-start space-x-3">
          <div class="text-2xl">✂️</div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-1">Free Alterations</h4>
            <p class="text-sm text-gray-600">Professional tailoring on purchases over $100</p>
          </div>
        </div>
        
        <div class="flex items-start space-x-3">
          <div class="text-2xl">👥</div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-1">Personal Service</h4>
            <p class="text-sm text-gray-600">Friendly staff who remember your preferences</p>
          </div>
        </div>
        
        <div class="flex items-start space-x-3">
          <div class="text-2xl">💳</div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-1">Loyalty Program</h4>
            <p class="text-sm text-gray-600">Earn rewards on every purchase</p>
          </div>
        </div>
        
        <div class="flex items-start space-x-3">
          <div class="text-2xl">🎁</div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-1">Gift Services</h4>
            <p class="text-sm text-gray-600">Gift cards and complimentary wrapping</p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">
        Can't decide which store to visit? Our friendly teams at all locations are ready to help!
      </p>
      <a
        href="tel:1300BIGAUS"
        class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call 1300 BIG AUS
      </a>
    </div>
  </div>
</section>