---

<section class="relative bg-gradient-to-br from-primary-50 via-white to-secondary-50 py-16 md:py-24 overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-64 h-64 bg-primary-200 rounded-full blur-3xl opacity-20 -translate-y-32 translate-x-32"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-accent-200 rounded-full blur-3xl opacity-15 translate-y-48 -translate-x-48"></div>
  
  <div class="container mx-auto px-4 relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content Side -->
      <div class="order-2 lg:order-1">
        <div class="inline-flex items-center bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-primary-600 rounded-full mr-2"></span>
          Australian Owned & Operated Since 1995
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Quality Fashion & Footwear for 
          <span class="text-primary-600">Australian Families</span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Discover premium clothing and footwear with expert fitting service, competitive prices, 
          and the personal touch that only local Australian retail can provide.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a
            href="/stores"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-all duration-200 shadow-lg hover:shadow-xl"
          >
            Find Your Local Store
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </a>
          <a
            href="/collections"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-primary-600 bg-white border-2 border-primary-600 rounded-lg hover:bg-primary-50 transition-all duration-200"
          >
            Shop Collections
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <!-- Trust indicators -->
        <div class="flex flex-wrap items-center gap-6 text-sm text-gray-500">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-accent-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Expert Fitting Service
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-accent-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            30-Day Comfort Guarantee
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-accent-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Free Alterations
          </div>
        </div>
      </div>
      
      <!-- Visual Side -->
      <div class="order-1 lg:order-2">
        <div class="relative">
          <!-- Main lifestyle image placeholder -->
          <div class="aspect-[4/3] bg-gradient-to-br from-primary-100 to-secondary-100 rounded-2xl shadow-2xl overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center text-gray-400">
              <div class="text-center">
                <div class="text-4xl mb-2">ðŸ‘”</div>
                <p class="text-lg">Lifestyle Fashion Photography</p>
              </div>
            </div>
          </div>
          
          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 bg-white rounded-lg shadow-lg p-4 border border-gray-100">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-accent-500 rounded-full"></div>
              <span class="text-sm font-medium text-gray-800">Premium Quality</span>
            </div>
          </div>
          
          <div class="absolute -bottom-4 -left-4 bg-white rounded-lg shadow-lg p-4 border border-gray-100">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
              <span class="text-sm font-medium text-gray-800">Australian Made</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>